@page
@model ResetPasswordModel
@{
    ViewBag.Title = "Reset password";
}

@section Styles {
    <style>
        .login-background {
            background-image: url('/Images/login-image.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-content {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
        }

        .login-container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

            /* Background with blur effect */
            .login-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/Images/login-image.jpg') no-repeat center center;
                background-size: cover;
                filter: blur(8px);
                z-index: 1;
            }

            /* Overlay for dim effect (optional) */
            .login-container::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.2);
                z-index: 2;
            }

        .login-box-body {
            position: relative;
            z-index: 3;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
            border-radius: 5%;
        }

        .login-center-wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 3;
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .login-box-body h1 {
            margin-top: 0;
            color: black;
        }

        .login-logo {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
        }
    </style>
}

<div class="login-container">
    <div class="login-center-wrapper">
        <div class="login-box-body">
            <h1><b style="font-size: 30px;">Forgot Password</b></h1>
            <p style="margin-bottom: 20px;">Enter your email and username</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post">
                <input asp-for="Input.Code" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input asp-for="Input.Username" class="form-control" placeholder="Enter Username">
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" style="margin-top: 10px;"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" style="margin-top: 10px;"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success btn-block" style="margin-top: 10px;">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}