@{
	ViewBag.Title = "24hrs AI Detection Report";
}
@section Styles {
	@* <link rel="stylesheet" href="~/Assets/Plugins/datatables.net-bs/css/dataTables.bootstrap.min.css"> *@
}
@section scripts {
	<script src="~/Assets/Plugins/datatables.net/js/jquery.dataTables.min.js"></script>
	<script src="~/Assets/Plugins/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
	<script>
		let table;

		$(document).ready(function () {
			$('#detection-report-table').DataTable({
				responsive: true
			});

			flatpickr("#dateRange", {
				mode: "range",
				dateFormat: "d M, Y"
			});

			$('#searchBtn').on('click', function () {
				const cameraName = $('#cameraName').val();
				const dateRange = $('#dateRange').val();
				const startTime = $('#startTime').val();
				const endTime = $('#endTime').val();
				const typeFilter = $('#typeFilter').val();

				// Highlight missing fields
				if (!cameraName) $('#cameraName').css('border', '1px solid red');
				if (!dateRange) $('#dateRange').css('border', '1px solid red');
				if (!startTime) $('#startTime').css('border', '1px solid red');
				if (!endTime) $('#endTime').css('border', '1px solid red');
				if (!typeFilter) $('#typeFilter').css('border', '1px solid red');

				// Check if all required fields are filled
				if (!cameraName || !dateRange || !startTime || !endTime || !typeFilter) {
					alert('Please fill in all required fields!');
					return; // Stop further execution if any field is missing
				}

				console.log(cameraName, dateRange, startTime, endTime, typeFilter);
				$.ajax({
					url: '/FireDetectionReport/FireDetectionReportTable',
					type: 'GET',
					data: {
						cameraName: cameraName,
						dateRange: dateRange,
						startTime: startTime,
						endTime: endTime,
						typeFilter: typeFilter
					},
					success: function (data) {
						console.log(data);

						initializeDataTable();

						table.clear();

						$.each(data, function (index, item) {
							const row = [
								index + 1,
								item.cameraName,
								item.videoPath,
								item.date,
								item.time,
								item.type,
								item.videoLink ? `<button class="play-video" data-video-url="${item.videoLink}">Play Video</button>` : ''
							];

							table.row.add(row);
						});

						table.columns.adjust().draw();
					},
					error: function (xhr, status, error) {
						console.error('Error fetching data:', error);
						alert('Please select all required fields!');
						location.reload();
					}
				});
			});

			// Remove highlight on input
			$('#cameraName, #dateRange, #startTime, #endTime, #typeFilter').on('input change', function () {
				$(this).css('border', '');
			});

			$('#CSVBtn').on('click', function () {
				var csv = [];
				$('#detection-report-table tr').each(function () {
					var row = [];
					$(this).find('td, th').each(function (index) {
						if (index < 10) {
							row.push($(this).text());
						}
					});
					csv.push(row.join(','));
				});

				var csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });
				var downloadLink = document.createElement('a');
				downloadLink.download = 'Fire Detection Report.csv';
				downloadLink.href = window.URL.createObjectURL(csvFile);
				downloadLink.style.display = 'none';
				document.body.appendChild(downloadLink);
				downloadLink.click();
				document.body.removeChild(downloadLink);
			});

			$('#PDFBtn').on('click', function () {
				const { jsPDF } = window.jspdf;
				var doc = new jsPDF();

				var rowData = [];
				$('#detection-report-table tr').each(function () {
					var row = [];
					$(this).find('td, th').each(function (index) {
						if (index < 10) {
							row.push($(this).text());
						}
					});
					rowData.push(row);
				});

				doc.autoTable({
					head: [rowData[0]],
					body: rowData.slice(1)
				});

				doc.save('Fire Detection Report.pdf');
			});
		});

		function initializeDataTable() {
			if ($.fn.DataTable.isDataTable('#detection-report-table')) {
				$('#detection-report-table').DataTable().clear().destroy();
				$('#detection-report-table tbody').empty();
			}

			let headerHtml = `
				<tr>
					<th>No.</th>
					<th>Camera Name</th>
					<th>Video Path</th>
					<th>Date</th>
					<th>Time</th>
					<th>Type</th>
					<th>Link</th>
				</tr>
			`;
			$('#detection-report-table thead').html(headerHtml);

			const columnDefinitions = [
				{ title: "No." },
				{ title: "Camera Name" },
				{ title: "Video Path" },
				{ title: "Date" },
				{ title: "Time" },
				{ title: "Type" },
				{ title: "Link" }
			];

			table = $('#detection-report-table').DataTable({
				responsive: true,
				columns: columnDefinitions
			});
		}
	</script>
}

