<!DOCTYPE html>
<html>
<head>
    <title>AI Model Page</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!--Font Style-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital@1&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!--CSS Style-->
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <!-- Main View -->
    <div class="container-fluid">
        <div class="header-container">
            <h3>AI Models</h3>
            <div>
                <button data-toggle="modal" data-target="#addModelModal" id="btn-add-module" class="btn btn-primary">
                    Add New AI Model
                </button>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table id="aimodel-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="styled-checkbox">No.</th>
                        <th>Model Detection</th>
                        <th>Model Name</th>
                        <th>Model URL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (aiModels != null && aiModels.Any())
                    {
                        @for (int i = 0; i < aiModels.Count; i++)
                        {
                            <tr>
                                <td style="padding: 10px;">@(i + 1)</td>
                                <td style="padding: 10px;">@aiModels[i].Detection</td>
                                <td style="padding: 10px;">@aiModels[i].Name</td>
                                <td style="padding: 10px;">@aiModels[i].Url</td>
                                <td style="padding: 10px;">
                                    <button type="button" class="btn btn-warning" style="padding: 5px 15px;" data-toggle="modal" data-target="#editModelModal"
                                            data-id="@aiModels[i].ModelId"
                                            data-detection="@aiModels[i].Detection"
                                            data-name="@aiModels[i].Name"
                                            data-url="@aiModels[i].Url">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </button>
                                    <button type="button" class="btn btn-danger" style="padding: 5px 15px;" data-toggle="modal" data-target="#deleteModelModal"
                                            data-id="@aiModels[i].ModelId">
                                        <i class="fas fa-trash"></i>
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 10px;">No AI Models Available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add AI Model Modal -->
    <div class="modal fade" id="addModelModal" tabindex="-1" role="dialog" aria-labelledby="addModelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModelModalLabel">Add AI Model</h5>
                </div>
                <form id="addModelForm" action="@Url.Action("Create", "Model")" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="modelDetection">Model Detection</label>
                            <input type="text" class="form-control" id="modelDetection" name="Detection" required />
                        </div>
                        <div class="form-group">
                            <label for="modelName">Model Name</label>
                            <input type="text" class="form-control" id="modelName" name="Name" required />
                        </div>
                        <div class="form-group">
                            <label for="modelUrl">Model URL</label>
                            <input type="text" class="form-control" id="modelUrl" name="Url" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit AI Model Modal -->
    <div class="modal fade" id="editModelModal" tabindex="-1" role="dialog" aria-labelledby="editModelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModelModalLabel">Edit AI Model</h5>
                </div>
                <form id="editModelForm" action="@Url.Action("Edit", "Model")" method="post">
                    <input type="hidden" id="editModelId" name="ModelId" />
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="editModelDetection">Model Detection</label>
                            <input type="text" class="form-control" id="editModelDetection" name="Detection" required />
                        </div>
                        <div class="form-group">
                            <label for="editModelName">Model Name</label>
                            <input type="text" class="form-control" id="editModelName" name="Name" required />
                        </div>
                        <div class="form-group">
                            <label for="editModelUrl">Model URL</label>
                            <input type="text" class="form-control" id="editModelUrl" name="Url" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete AI Model Modal -->
    <div class="modal fade" id="deleteModelModal" tabindex="-1" role="dialog" aria-labelledby="deleteModelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deletemodelModalLabel">Delete AI Model</h5>
                </div>
                <form id="deleteModelForm" action="@Url.Action("Delete", "Model")" method="post">
                    <input type="hidden" id="deleteModelId" name="ModelId" />
                    <div class="modal-body">
                        <p>Are you sure you want to delete this AI Model?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Handle the Edit Modal population
        $('#editModelModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modelId = button.data('id');
            var modelDetection = button.data('detection');
            var modelName = button.data('name');
            var modelUrl = button.data('url');

            var modal = $(this);
            modal.find('#editModelId').val(modelId);
            modal.find('#editModelDetection').val(modelDetection);
            modal.find('#editModelName').val(modelName);
            modal.find('#editModelUrl').val(modelUrl);
        });

        // Handle the Delete Modal population
        $('#deleteModelModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modelId = button.data('id');

            var modal = $(this);
            modal.find('#deleteModelId').val(modelId);
        });

    </script>
</body>
</html>